<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Blue Bell</h2>
        <form class="clearfix mb-4">
          <div class="form-group">
            <label for="name-input">Name</label>
            <input type="text" id="name-input" class="form-control" aria-describedby="name-text" placeholder="Enter Name">
          </div>
          <div class="form-group">
            <label for="description-input">Description of threat</label>
            <textarea class="form-control" id="description-input" aria-describedby="example-description" placeholder="Enter Threat"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right" type="submit">Submit</button>
        </form>
        <h3>Current Location:</h3>
        <div class="some-pannel">
          <div class="map-wrapper">
            <div id="map" style="width:100%;height:100%;"></div>
            <div id="coordinates">Your current coordinates are:</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/location.js"></script>
<script src="/js/index.js"></script>